@model List<SelectListItem>

@{
    ViewBag.Title = "انتخاب تاپیک";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <link href="~/Content/css/DefaultCheckbox.css" rel="stylesheet" />
}

    <div class="container mt-5 mb-5">
        <div class="page-header">
            انتخاب تاپیک
        </div>
        <div class="row justify-content-center">
            <div class="col-10">

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <ul>
                            @foreach (var item in Model)
                            {
                                <li>
                                    <input type="checkbox" id="@item.Value" value="@item.Value" name="Topics" checked="@item.Selected" />
                                    <label for="@item.Value">@item.Text</label>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-secondary btn-block">ذخیره</button>
                    </div>
                }

            </div>
        </div>
    </div>
