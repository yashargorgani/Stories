                });
            })*@
    </script>

}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div id="home-story-div">

                @*<div class="text-center">
                        <img src="~/Content/img/header-loading.gif" />
                    </div>*@

